<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous" />
    <title>URL Shrinker</title>
</head>

<body>
    <div class="container">
        <h1>URL Shrinker</h1>
        <form action="/shorturls" method="post" class="my-4 form-inline">
            <label for="fullurl" class="sr-only">URL</label>
            <input type="url" name="fullurl" id="fullurl" placeholder="URL" required class="form-control mr-2 col" />
            <button type="submit" class="btn btn-success">Shrink</button>
        </form>

        <table class="table table-striped table-responsive">
            <thead>
                <tr>
                    <th>Full URL</th>
                    <th>Short URL</th>
                    <th>Clicks</th>
                </tr>
            </thead>
            <tbody>
                <% shorturls.forEach(shorturl => { %>
                <tr>
                    <td>
                        <a href="<%= shorturl.full %>"><%= shorturl.full %></a>
                    </td>
                    <td>
                        <a href="<%= shorturl.short %>"><%= shorturl.short %></a>
                    </td>
                    <td><%= shorturl.clicks %></td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>

</html>